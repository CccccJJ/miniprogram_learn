.card {
  margin: 10px;
  position: relative;
}

.bg {
  width: 100%;
  border-radius: 10px;
  box-shadow: 0 0 5px #5f687e;
}

.logo {
  width: 80px;
  position: absolute;
  top: 10px;
  right: 20px;
}

.info {
  position: absolute;
  bottom: 30px;
  left: 30px;
  color: darkgrey;
  font-size: 16px;
}

.name {
  font-weight: bold;
}

.desc {
  margin-bottom: 10px;
}